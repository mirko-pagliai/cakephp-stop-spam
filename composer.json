{
    "name": "mirko-pagliai/cakephp-stop-spam",
    "description": "A CakePHP plugin that allows you to check if a username, email address or ip address has been reported as a spammer",
    "homepage": "https://github.com/mirko-pagliai/cakephp-stop-spam",
    "type": "cakephp-plugin",
    "license": "MIT",
    "authors": [
        {
            "name": "Mirko Pagliai",
            "email": "mirko.pagliai@gmail.com"
        }
    ],
    "require": {
        "php": ">=5.5.9",
        "cakephp/cakephp": "^3.4",
        "mirko-pagliai/php-tools": "~1.2.6"
    },
    "require-dev": {
        "cakephp/cakephp-codesniffer": "^3.0|^4.0",
        "mirko-pagliai/me-tools": "~2.18.6",
        "phpunit/phpunit": "^5.7.14|^6.0"
    },
    "autoload": {
        "psr-4": {
            "StopSpam\\": "src"
        },
        "files": [
            "src/Core/request_detectors.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "App\\": "tests/test_app/TestApp/",
            "StopSpam\\Test\\": "tests"
        }
    },
    "scripts": {
        "check": [
            "@cs-check",
            "@update-lowest",
            "@test",
            "@composer update",
            "@test",
            "@stan-setup",
            "@stan"
        ],
        "cs-check": "phpcs --standard=phpcs.xml.dist",
        "cs-fix": "phpcbf --standard=phpcs.xml.dist",
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage",
        "phpstan": "phpstan.phar analyse",
        "psalm": "psalm.phar",
        "stan": [
            "@phpstan",
            "@psalm"
        ],
        "stan-setup": "cp composer.json composer.backup && composer require --dev phpstan/phpstan:^0.12 psalm/phar:^3.18 && mv composer.backup composer.json",
        "update-lowest": "@composer update --prefer-lowest"
    }
}
